<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<!-- normal strength motors
  <xacro:property name="torque_limit" value="2.5"/>
  <xacro:property name="velocity_limit" value="5.8"/> -->

<!-- super strength -->
  <xacro:property name="torque_limit" value="10"/>
  <xacro:property name="velocity_limit" value="10"/> 


  <xacro:macro name="leg" params="name parent *origin">

    <!-- Define Links-->
    <link name="${name}_link0">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link0.stl" />
        </geometry>
        <material name="white"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link0.stl" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.029044932513473305 0.010265080427010284 -0.03814827760382364" rpy="0 0 0"/>
        <mass value="0.15187448298114298"/>
        <inertia ixx="5.3e-05" iyy="6.1e-05" izz="6.9e-05" ixy="-6e-06" iyz="0.0" ixz="0.0"/>
      </inertial>
    </link>

    <link name="${name}_link1">
      <visual>
        <origin xyz="-0.01348 -0.002676 0.038139" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link1.stl" />
        </geometry>
        <material name="white"/>
      </visual>

      <collision>
        <origin xyz="-0.01348 -0.002676 0.038139" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link1.stl" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="-0.04078394902352935 -0.013231283994066126 0.00021684450055575039" rpy="0 0 0"/>
        <mass value="0.09734685103972182"/>
        <inertia ixx="2.2e-05" iyy="3.6e-05" izz="4e-05" ixy="-2e-06" iyz="0.0" ixz="0.0"/>
      </inertial>
    </link>

    <link name="${name}_link2">
      <visual>
        <origin xyz="0.020447 -0.009456 0.037939" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link2.stl" />
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0.020447 -0.009456 0.037939" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link2.stl" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="-0.06366942125676311 -0.021943300476205383 0.0024103683252244337" rpy="0 0 0"/>
        <mass value="0.1208747488020619"/>
        <inertia ixx="3.4e-05" iyy="0.000102" izz="0.000104" ixy="1.4e-05" iyz="-1e-06" ixz="2e-06"/>
      </inertial>
    </link>
 
    <link name="${name}_link3">
      <visual>
        <origin xyz="0.085454 0.010544 0.057414" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link3.stl" />
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0.085454 0.010544 0.057414" rpy="0 0 0"/>
        <geometry>
          <mesh filename="file://$(find sence_description)/meshes/lores/sence_arm_link3.stl" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="-0.06827181090766318 0.01066089288586344 0.020893759814543007" rpy="0 0 0"/>
        <mass value="0.052701725493830516"/>
        <inertia ixx="1.8e-05" iyy="7.3e-05" izz="7.2e-05" ixy="1.4e-05" iyz="0.0" ixz="-1e-06"/>
      </inertial>
    </link>


    <!-- Define Joints -->
    <joint name="${name}_joint0" type="fixed">
      <parent link="${parent}"/>
      <child link="${name}_link0"/>
      <axis xyz="0 0 1"/>
      <xacro:insert_block name="origin" />
    </joint>

    <joint name="${name}_joint1" type="revolute">
      <parent link="${name}_link0"/>
      <child link="${name}_link1"/>
      <axis xyz="1 0 0"/>
      <origin xyz="0.01348 0.002676 -0.038139" rpy="0 0 0"/>
      <limit upper="4" lower="-4" effort="${torque_limit}" velocity="${velocity_limit}"/>
      <dynamics damping="0.1" friction="0.1"/>

    </joint>

    <joint name="${name}_joint2" type="revolute">
      <parent link="${name}_link1"/>
      <child link="${name}_link2"/>
      <axis xyz="0 -1 0"/>
      <origin xyz="-0.033927 0.00678 0.0002" rpy="0 0 0"/>
      <limit upper="1.919862" lower="-1.919862" effort="${torque_limit}" velocity="${velocity_limit}"/>
      <dynamics damping="0.1" friction="0.1"/>

    </joint>
 
    <joint name="${name}_joint3" type="revolute">
      <parent link="${name}_link2"/>
      <child link="${name}_link3"/>
      <axis xyz="0 0 1"/>
      <origin xyz="-0.065007 -0.02 -0.019475" rpy="0 0 0"/>
      <limit upper="2.356194" lower="-2.268928" effort="${torque_limit}" velocity="${velocity_limit}"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

  </xacro:macro>

</robot>
