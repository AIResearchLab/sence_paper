<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sence">

    <!-- materials -->
    <xacro:include filename="$(find sence_description)/urdf/common/materials.urdf.xacro" />

    <!-- assemblies -->
    <xacro:include filename="$(find sence_description)/urdf/assemblies/arm.urdf.xacro" />

    <!-- parts -->
    <xacro:include filename="$(find sence_description)/urdf/parts/body.urdf.xacro" />

    <!-- plugins -->
    <xacro:include filename="$(find sence_description)/urdf/common/plugins.urdf.xacro" />

    <!-- base link -->
    <link name="base_link" />

    <!-- base footprint -->
    <link name="base_footprint"/>

    <joint name="base_footprint_joint" type="prismatic">
        <parent link="base_link" />
        <child link="base_footprint" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit upper="0" lower="-1" effort="1000" velocity="1000" />
    </joint>

    <!-- body and base link inertia -->
    <xacro:body name="base_link_inertia" parent="base_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:body>

    <!-- arms -->
    <xacro:arm name="lf" parent="base_link">
        <origin xyz="0.076509 0.076509 0" rpy="0 0 0" />
    </xacro:arm>

    <xacro:arm name="rf" parent="base_link">
        <origin xyz="0.076509 -0.076509 0" rpy="0 0 0" />
    </xacro:arm>

    <xacro:arm name="lm" parent="base_link">
        <origin xyz="0 0.1082 0" rpy="0 0 0" />
    </xacro:arm>

    <xacro:arm name="rm" parent="base_link">
        <origin xyz="0 -0.1082 0" rpy="0 0 0" />
    </xacro:arm>

    <!-- attach sensor packages -->
    <!-- vision -->
    <xacro:include filename="$(find sence_description)/urdf/accessories/vision_package.urdf.xacro" />
    <xacro:vision_package name="vision_package" parent="base_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:vision_package>

    <!-- range -->
    <xacro:include filename="$(find sence_description)/urdf/accessories/range_package.urdf.xacro" />
    <xacro:range_package name="range_package" parent="base_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:range_package>

    <!-- inertia -->
    <xacro:include filename="$(find sence_description)/urdf/accessories/inertia_package.urdf.xacro" />
    <xacro:inertia_package name="inertia_package" parent="base_link">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:inertia_package>

    <!-- rviz hud reference frame -->
    <link name="rviz_hud" />
    <joint name="rviz_hud_joint" type="fixed">
        <parent link="base_link" />
        <child link="rviz_hud" />
        <origin xyz="-1 0 1.8" rpy="0 0 0" />
    </joint>

    <!-- extras attachment reference frame -->
    <link name="extras_frame" />
    <joint name="extras_frame_joint" type="fixed">
        <parent link="base_link" />
        <child link="extras_frame" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

</robot>
