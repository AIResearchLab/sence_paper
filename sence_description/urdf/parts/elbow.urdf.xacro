<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="elbow" params="name parent *origin">

        <xacro:include filename="$(find sence_description)/urdf/common/math.urdf.xacro" />

        <!-- revolute attachment joint -->
        <joint name="${name}_joint" type="revolute" >
            <parent link="${parent}" />
            <child link="${name}" />
            <xacro:insert_block name="origin" />
            <axis xyz="0 0 1" rpy="0 0 0" />
            <limit upper="1.05" lower="-1.6" effort="2.5" velocity="5.5" />
        </joint>

        <!-- elbow link -->
        <link name="${name}">
            <!-- visual -->
            <visual>
                <geometry>
                    <!-- <mesh filename="package://sence_description/meshes/elbow.stl"/> -->
                    <mesh filename="package://sence_description/meshes/elbow.dae"/>
                </geometry>
                <material name="LightGrey2"/>
            </visual>

            <!-- collision -->
            <xacro:property name="collision_box_x" value="0.075" />
            <xacro:property name="collision_box_y" value="0.055" />
            <xacro:property name="collision_box_z" value="0.035" />

            <collision >
                <geometry>
                    <!-- <box size="${collision_box_x} ${collision_box_y} ${collision_box_z}"/> -->
                    <mesh filename="package://sence_description/meshes/elbow.stl"/>
                </geometry>
            </collision>

            <!-- inertia -->
            <inertial>
                <mass value="0.176" />
                <origin xyz="0.05811 -0.000038 0.002579" rpy="0 0 0" />
                <inertia ixx="0.000053794" ixy="0.000004532" ixz="0.000028675" iyy="0.000196511" iyz="-0.000000913" izz="0.000167864" />
            </inertial>
        </link>

        <!-- transmission -->
        <transmission name="${name}_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${name}_joint">
                <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            </joint>
            <actuator name="${name}_motor">
                <mechanicalReduction>1.0</mechanicalReduction>
                <!-- <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface> -->
            </actuator>
        </transmission>

        <!-- gazebo colour -->
        <gazebo reference="${name}">
            <material>Gazebo/Grey</material>
        </gazebo>

        <!-- gazebo physics properties -->
        <!-- <gazebo reference="${name}">
			<mu1 value="0.8"/>
			<mu2 value="0.8"/>
			<kp value="10000000.0" />
			<kd value="1.0" />
			<fdir1 value="1 0 0"/>
		</gazebo> -->

    </xacro:macro>

</robot>
