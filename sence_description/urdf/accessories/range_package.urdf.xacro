<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="range_package" params="name parent *origin">
        <link name="${name}" />
        <joint name="${name}_joint" type="fixed">
            <parent link="${parent}" />
            <child link="${name}" />
            <origin xyz="0 0 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>
